filebeat.inputs:
    - type: filestream
      id: minikube-containers
      paths:
        - /var/log/containers/*.log
      processors:
      - add_kubernetes_metadata:
          host: ${NODE_NAME}
processors:
    - add_cloud_metadata:
    - add_host_metadata:

output.logstash:
    hosts: ["logstash.logging.svc.cluster.local:5044"]
